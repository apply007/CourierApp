{
  "info": {
    "name": "Courier-Parcel API",
    "_postman_id": "courier-parcel",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth - Register",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": "{{base}}/auth/register",
        "body": {
          "mode": "raw",
          "raw": "{\"name\": \"Admin\", \"email\": \"admin@example.com\", \"password\": \"admin123\", \"role\": \"admin\"}"
        }
      }
    },
    {
      "name": "Auth - Login",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": "{{base}}/auth/login",
        "body": {
          "mode": "raw",
          "raw": "{\"email\": \"admin@example.com\", \"password\": \"admin123\"}"
        }
      }
    },
    {
      "name": "Customer - Create Parcel",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": "{{base}}/parcels",
        "body": {
          "mode": "raw",
          "raw": "{\"pickupAddress\": \"A\", \"deliveryAddress\": \"B\", \"size\": \"small\", \"type\": \"standard\", \"paymentMode\": \"prepaid\"}"
        }
      }
    },
    {
      "name": "Admin - Analytics",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": "{{base}}/admin/analytics"
      }
    },
    {
      "name": "Admin - Export CSV",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": "{{base}}/admin/export?type=csv"
      }
    },
    {
      "name": "Public - Track",
      "request": {
        "method": "GET",
        "url": "{{base}}/parcels/track/TRK-XXXX"
      }
    }
  ],
  "variable": [
    {
      "key": "base",
      "value": "http://localhost:4000/api"
    },
    {
      "key": "token",
      "value": ""
    }
  ]
}